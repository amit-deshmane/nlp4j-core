<configuration>
	<tsv>
        <column index="1" field="form"/>
        <column index="3" field="pos"/>
    </tsv>

    <lexica>
        <word_clusters field="uncapitalized_simplified_word_form">edu/emory/mathcs/nlp/lexica/en-brown-clusters-simplified-uncapitalized.xz</word_clusters>
        <named_entity_gazetteers field="uncapitalized_simplified_word_form">edu/emory/mathcs/nlp/lexica/en-ner-gazetteers-simplified-uncapitalized.xz</named_entity_gazetteers>
    </lexica>

    <optimizer>
        <algorithm>adagrad-mini-batch</algorithm>
        <l1_regularization>0.00001</l1_regularization>
        <learning_rate>0.02</learning_rate>
        <max_epochs>40</max_epochs>
        <batch_size>5</batch_size>
        <roll_in>0.95</roll_in>
        <bias>0</bias>
    </optimizer>
</configuration>
